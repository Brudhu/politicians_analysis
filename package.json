{
  "name": "politicians_analysis",
  "version": "1.0.0",
  "description": "Scraper with sentiment analysis on news about Brazilian politicians",
  "main": "index.js",
  "author": "Bruno Luvizotto / Danilo Luvizotto",
  "license": "MIT",
  "scripts": {
    "clean": "rm -rf dist",
    "build": "yarn clean && tsc && yarn copy",
    "copy": "cp -r tsconfig-paths-bootstrap.js tsconfig.json dist",
    "start": "node --inspect -r ./dist/index.js",
    "dev": "nodemon --watch src -e ts --exec 'yarn build && env-cmd -e dev yarn start'",
    "test": "yarn build && env-cmd -e test ava",
    "lint": "eslint . --ext .ts",
    "lint-fix": "yarn lint --fix",
    "prettier-fix": "prettier --write --check 'src/**/*.ts'"
  },
  "devDependencies": {
    "@types/node": "^13.13.1",
    "@typescript-eslint/eslint-plugin": "^2.29.0",
    "@typescript-eslint/parser": "^2.29.0",
    "env-cmd": "^10.1.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-prettier": "^3.1.3",
    "husky": "^4.2.5",
    "lint-staged": "^10.1.6",
    "nodemon": "^2.0.3",
    "prettier": "^2.0.4",
    "ts-node": "^8.9.0",
    "typescript": "^3.8.3"
  }
}
