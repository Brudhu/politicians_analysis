{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "noImplicitReturns": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "lib": ["ES2020"],
    "noUnusedLocals": true,
    "target": "ES2020",
    "outDir": "./dist",
    "typeRoots": [
      "./node_modules/@types",
      "./typings"
    ],
    "baseUrl": "src",
    "paths": {
      "@common": ["common"],
      "@common/*": ["common/*"],
    }
  },
  "include": [
    "src",
    "tests"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
